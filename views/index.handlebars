                        <label for="email">
                            <b>Email</b>
                        </label>
                        <input id='account-email' type="text" placeholder="Enter Email" name="email" required>

                        <label for="psw">
                            <b>Password</b>
                        </label>
                        <input id='account-password' type="password" placeholder="Enter Password" name="psw" required>

